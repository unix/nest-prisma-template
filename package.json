{
  "name": "nest-prisma-template",
  "version": "1.0.0",
  "description": "Extensible templates for NestJS projects",
  "main": "dist/index.js",
  "author": "@unix",
  "license": "MIT",
  "prettier": "@geist-ui/prettier-config",
  "scripts": {
    "build": "rm -rf dist && prisma generate && nest build",
    "prettier": "prettier --write .",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "prisma generate && prisma migrate deploy && node dist/main",
    "up": "POSTGRES_PORT=5432 docker-compose up -d",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "engines": {
    "node": ">=10.1.0"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schedule": "^0.4.2",
    "@prisma/client": "^2.23.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@geist-ui/prettier-config": "^1.0.1",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.27",
    "prettier": "^2.1.2",
    "prisma": "^2.23.0",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  }
}
